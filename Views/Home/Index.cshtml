@{
    ViewData["Title"] = "Home Page";
}

<div class="hero d-flex align-items-center justify-content-center text-center">
    <div>
        <h1 class="display-3 fw-bold text-primary mb-3">Welcome to ProductInventory</h1>
        <p class="lead text-muted mb-4">
            Manage <span class="fw-semibold">Products</span>, <span class="fw-semibold">Categories</span>,
            and <span class="fw-semibold">Suppliers</span> with ease.
        </p>
        <div class="mt-3">
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg me-2 shadow-sm">
                <i class="bi bi-bag-check-fill me-1"></i> View Products
            </a>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                <i class="bi bi-speedometer2 me-1"></i> Dashboard
            </a>
        </div>
    </div>
</div>
