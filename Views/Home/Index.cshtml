@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero d-flex align-items-center justify-content-center text-center">
    <div>
        <h1 class="display-3 fw-bold text-primary mb-3">Welcome to ProductInventory</h1>
        <p class="lead text-light mb-4">
            Manage <span class="fw-semibold">Products</span>, <span class="fw-semibold">Categories</span>,
            and <span class="fw-semibold">Suppliers</span> with ease.
        </p>
        <div class="mt-3">
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg me-2 shadow-sm">
                <i class="bi bi-bag-check-fill me-1"></i> View Products
            </a>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light btn-lg shadow-sm">
                <i class="bi bi-speedometer2 me-1"></i> Dashboard
            </a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-box-seam display-4 text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Products</h5>
                    <p class="card-text text-muted">Easily add, update, and monitor product stock in real-time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-tags-fill display-4 text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Organize Categories</h5>
                    <p class="card-text text-muted">Keep your inventory structured with customizable categories.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-truck display-4 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Track Suppliers</h5>
                    <p class="card-text text-muted">Maintain supplier details and ensure a smooth supply chain.</p>
                </div>
            </div>
        </div>
    </div>
</div>
