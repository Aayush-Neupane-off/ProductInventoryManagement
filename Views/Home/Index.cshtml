@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero d-flex align-items-center justify-content-center text-center py-5">
    <div>
        <h1 class="display-4 fw-bold text-primary mb-3">Welcome to ProductInventory</h1>
        <p class="lead text-light mb-3">
            Manage <span class="fw-semibold">Products</span>, <span class="fw-semibold">Categories</span>,
            and <span class="fw-semibold">Suppliers</span> with ease.
        </p>
        <div class="mt-2">
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-md me-2 shadow-sm">
                <i class="bi bi-bag-check-fill me-1"></i> View Products
            </a>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light btn-md shadow-sm">
                <i class="bi bi-speedometer2 me-1"></i> Dashboard
            </a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-4">
    <div class="row text-center g-3">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-3">
                    <i class="bi bi-box-seam fs-1 text-primary mb-2"></i>
                    <h5 class="card-title fw-bold">Manage Products</h5>
                    <p class="card-text text-muted small">Easily add, update, and monitor product stock in real-time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-3">
                    <i class="bi bi-tags-fill fs-1 text-success mb-2"></i>
                    <h5 class="card-title fw-bold">Organize Categories</h5>
                    <p class="card-text text-muted small">Keep your inventory structured with customizable categories.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-3">
                    <i class="bi bi-truck fs-1 text-warning mb-2"></i>
                    <h5 class="card-title fw-bold">Track Suppliers</h5>
                    <p class="card-text text-muted small">Maintain supplier details and ensure a smooth supply chain.</p>
                </div>
            </div>
        </div>
    </div>
</div>
